extends layout

block content
  section
    .auth-controls
      .signin
        svg(class='auth-icon', fill='#B0BEC5', height='200', width='200', viewbox='0 0 24 24', xmlns='http://www.w3.org/2000/svg')
          path(d='M3 5v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2H5c-1.11 0-2 .9-2 2zm12 4c0 1.66-1.34 3-3 3s-3-1.34-3-3 1.34-3 3-3 3 1.34 3 3zm-9 8c0-2 4-3.1 6-3.1s6 1.1 6 3.1v1H6v-1z')
          path(d='M0 0h24v24H0z', fill='none')
        section.auth-details
          section.request-details
            h2 Please sign in.
          form.signin-form(method='post')
            if badCredentials
              .error Wrong username or password.
            if error
              .error= error.message
            .signin-control
              input(name='username', type='text', placeholder='username@domain')
            .signin-control
              input(name='password', type='password', placeholder='password')
            .signin-submit
              input.dismissive(type='submit', value='Cancel')
              input.affirmative(type='submit', value='Sign in')
